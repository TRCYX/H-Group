  "scripts": {
    "build": "tsx --tsconfig ./scripts/tsconfig.json ./scripts/build.mts",
    "check-valid": "tsx --tsconfig ./scripts/tsconfig.json ./scripts/checkValidYAMLFiles.mts",
    "clear": "docusaurus clear",
    "compile-plugin": "tsx --tsconfig ./scripts/tsconfig.json ./scripts/compilePlugin.mts",
