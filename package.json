    "react-dom": "19.1.1",
    "react-zoom-pan-pinch": "3.7.0",
    "yaml": "2.8.1",
    "zod": "4.1.9"
  },
  "devDependencies": {
    "@docusaurus/tsconfig": "3.8.1",
    "complete-cli": "1.3.11",
    "complete-lint": "4.0.0",
